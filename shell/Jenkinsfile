pipeline {
    agent any 
        stages {
            stage('echo'){
                steps{
                    sh """
                      sudo yum install java-1.8.0-openjdk-devel wget -y
                      sudo yum install git -y 
                      sudo yum install maven -y
                    """
                }
            }
            stage('clean workspace'){
                steps{
                   
                     cleanWs()
                     
                }
            }
            stage('clone'){
               steps{
                sh """
                git clone https://github.com/rajjdevops/myweb.git
                """
               }
          }
          stage('maven build'){
            steps{
                sh """
                cd myweb/
                mvn clean install
                """
            }
        }

        stage('copy artifact'){
            steps{
                sh """
                pwd
                cp myweb/target/myweb-0.12.0.war /opt/war/
                """
            }
        }
        stage('build image'){
            steps{
                    sh """
                    cd /opt/war/
                    docker build -t "tommy" .
                    """
             }
         }
            stage('build container') {
                steps{
                      sh """
                      docker run -it -d --name edwindevops -p 8887:8080 tommy:latest
                      """
                }
            }
            
    }
}
